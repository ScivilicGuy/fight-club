CREATE TABLE Tournaments (
  tournamentId serial PRIMARY KEY,
  name text NOT NULL,
  description text DEFAULT '',
  inviteCode varchar(6) NOT NULL,
  state text NOT NULL,
  round int DEFAULT 1,
  winner text DEFAULT ''
);

CREATE TABLE Players (
  playerName text PRIMARY KEY,
  tournamentId int REFERENCES Tournaments(tournamentId)
);

CREATE TABLE Matches (
  matchId serial PRIMARY KEY,
  tournamentId int REFERENCES Tournaments(tournamentId),
  player1 text REFERENCES Players(playerName),
  player2 text REFERENCES Players(playerName),
  winner text REFERENCES Players(playerName),
  round int NOT NULL
);